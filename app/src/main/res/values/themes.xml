<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseThemeNoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- this is used to handle the different behaviour of translucent status bar in API 19 vs API 21 -->
    <bool name="fitsSystemWindowsFlag">true</bool>
    <integer name="show_fake_status_bar">@integer/view_gone</integer> <!-- Only needed for API 19 -->
    <integer name="view_visible">0</integer> <!-- This is VISIBLE -->
    <integer name="view_invisible">1</integer> <!-- This is INVISIBLE -->
    <integer name="view_gone">2</integer> <!-- This is GONE -->
</resources>